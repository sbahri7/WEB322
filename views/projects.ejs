<!DOCTYPE html>
<html lang="en">
<head>
  <title>All Projects - Climate Solutions</title>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="/css/main.css" rel="stylesheet">
</head>
<body>
  <%- include('partials/navbar', { page: '/solutions/projects' }) %>
  <div class="hero bg-base-100 py-8">
    <div class="hero-content text-center">
      <div class="max-w-xl">
        <h1 class="text-4xl font-bold mb-2">All Projects</h1>
        <p class="text-lg mb-4">Browse climate solutions by sector, or see all projects below.</p>
        <div class="flex flex-wrap gap-2 justify-center">
          <a href="/solutions/projects?sector=agriculture" class="btn btn-outline btn-sm">Agriculture</a>
          <a href="/solutions/projects?sector=industry" class="btn btn-outline btn-sm">Industry</a>
          <a href="/solutions/projects?sector=electricity" class="btn btn-outline btn-sm">Electricity</a>
          <a href="/solutions/projects" class="btn btn-outline btn-sm">All</a>
        </div>
      </div>
    </div>
  </div>

  <div class="container mx-auto px-4 pb-10">
    <div class="overflow-x-auto">
      <table class="table w-full bg-base-100">
        <thead>
          <tr>
            <th class="text-lg">Title</th>
            <th class="text-lg">Sector</th>
            <th class="text-lg">Summary</th>
            <th class="text-lg">Details</th>
          </tr>
        </thead>
        <tbody>
          <% projects.forEach(project => { %>
            <tr>
              <td class="font-bold"><%= project.title %></td>
              <td>
                <a class="btn btn-xs btn-outline" href="/solutions/projects?sector=<%= encodeURIComponent(project.sector) %>">
                  <%= project.sector %>
                </a>
              </td>
              <td><%= project.summary_short %></td>
              <td>
                <a class="btn btn-primary btn-sm" href="/solutions/projects/<%= project.id %>">Details</a>
              </td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
  </div>
</body>
</html>
